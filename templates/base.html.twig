                <li class="nav-item active">
                    <a class="nav-link" href="{{path('dashboard')}}"><img src="{{asset('img/home.svg')}}" width="25"> <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path('carrito')}}"><img src="{{asset('img/cart.svg')}}" width="30"><span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><img src="{{asset('img/person-circle-outline.svg')}}" width="30"></a>
                </li>
                </ul>
